@{
    @model Book.Models.RegistrationViewModel
}
<h1>Register</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Register">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" required />
                @*<span asp-validation-for="Email" class="text-danger"></span>*@
                @*<div id="email_error">Please fill up the email</div>*@
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Password"  required/>
                @*<span asp-validation-for="Password" class="text-danger"></span>*@
                @*<div id="password_error">Please fill up the password</div>*@
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required />
                @*<span asp-validation-for="ConfirmPassword" class="text-danger"></span>*@
                @*<div id="password_error">Re-eneter your password</div>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Register" aspclass="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


 



